{
	"name": "bun-server-template",
	"devDependencies": {
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"private": true,
	"scripts": {
		"build": "NODE_ENV=production bun build ./src/client/client.ts --outdir ./build --entry-naming [dir]/bundle.[ext]",
		"build-dev": "NODE_ENV=development bun build ./src/client/client.ts --outdir ./build --entry-naming [dir]/bundle.[ext] --watch",
		"server": "bun run --watch ./src/server/server.ts",
		"dev": "bun run ./src/dev/dev.ts"
	}
}
